int factorial(int x) {
	int res = 1;
	for (int i = 1; i <= x; i++)
		res *= i;
	return res;
}


void main() {
	setlocale(LC_ALL, "RUS");
	double x, res;
	int step = 0;
	puts("Введите x (double)");
	scanf("%lf", &x);
	for (int i = 1; i < 13; i += 2) {
		res += pow((-1), step) * (pow(x, i) / (double)factorial(i));
		step++;
	}
	printf("Результат = %lf", res);
}
